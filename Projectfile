from medikit import require

git = require('git')
make = require('make')
pytest = require('pytest')
python = require('python')
yapf = require('yapf')

python.setup(
    name='django_includes',
    description=
    'Include django views as a subparts of other django views, using either HTTP (with esi or hinclude) or direct render.',
    license='Apache License, Version 2.0',
    url='https://github.com/hartym/django-includes',
    download_url='https://github.com/hartym/django-includes/archive/{version}.tar.gz',
    author='Romain Dorgueil',
    author_email='romain@dorgueil.net',
)

python.add_requirements(
    'django',
    'jinja2 >=2.8,<3.0',  # optional ?
    'requests >=2,<3',
    'CacheControl >=0.11,<0.12',
    'PyJWT >=1.4,<1.5',
)

